@model string


<p class="display-4 text-center my-2">Resetování hesla</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div class="form-group">
                <label for="userEmail" class="control-label">Zadejte e-mail na který bude odeslán odkaz pro resetování hesla</label>
                <input name="userEmail" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Odeslat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
