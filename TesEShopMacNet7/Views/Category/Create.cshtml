@model TestEShopMacNet7.Models.Product.Category

@{
    ViewData["Title"] = "Create category";
}

<p class="display-4 text-center my-6">Vytvořit novou kategorii</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group my-2">
                <label asp-for="InternalName" class="control-label"></label>
                <input asp-for="InternalName" class="form-control" />
                <span asp-validation-for="InternalName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Vytvořit</button>
            </div>
        </form>
    </div>
</div>
